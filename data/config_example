# Example SSH config
# Host hostname1
# tag: tagValue1,tagValue2,tagN
#     SSH_OPTION value
#     SSH_OPTION value
#
# $ man ssh_config

Host *
	  User root
	  AddKeysToAgent no
	  HashKnownHosts no

Host free
#tag: sf
    User root
    HostName adm.segfault.net
    IdentityFile ~/.ssh/id_sf-adm-segfault-net
    SetEnv SECRET=MySuperSecret
    LocalForward 5900 0:5900

Host vip
#tag: sf
    User root
    HostName adm.segfault.net
    IdentityFile ~/.ssh/id_sf-adm-segfault-net
    SetEnv SECRET=MySuperSecret
    LocalForward 5900 0:5900

host srv1
#tag: prod
    User linus
    HostName prod.srv.linux.com

host srv2
#tag: prod
    User skyper
    HostName hackme.phrack.org
    LocalForward 5900 0:5900

host srv3
#tag: test
    User test
    HostName test.phrack.org

host srv4
#tag: sandbox
    User root
    HostName sandbox.segfault.net
    LocalForward 5900 0:5900
